<Project>
  <Import Project="..\version.xml" />

  <PropertyGroup>
    <Version>$(VersionPrefix)</Version>
    <Version Condition="'$(VersionSuffix)' != ''">$(Version)-$(VersionSuffix)</Version>
    <Version Condition="'$(BuildNumber)' != ''">$(Version)-$(BuildNumber)</Version>
  </PropertyGroup>

  <ItemGroup>
    <ExcludeFromTest Include="$(RepositoryRoot)test\ApiCheckBaseline*\*.csproj" />
  </ItemGroup>

  <ItemGroup>
    <KoreBuildModule Include="NuGetPackageVerifier" />
    <KoreBuildModule Include="NuGet.Tasks" />
    <KoreBuildModule Include="BuildTools.Tasks" />

    <KoreBuildTool Include="KoreBuild.SdkResolver" TargetFramework="netstandard2.0" />
    <KoreBuildTool Include="KoreBuild.SdkResolver" TargetFramework="net46" />

    <KoreBuildSdk Include="KoreBuild.RepoTasks.Sdk" />
  </ItemGroup>
</Project>
